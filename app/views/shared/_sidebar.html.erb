<!-- Sidebar -->
<div class="fixed inset-y-0 left-0 z-40 w-64 bg-white border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out" id="sidebar">
  <div class="flex flex-col h-full">
    <!-- Logo -->
    <div class="flex items-center px-6 py-6 border-b border-slate-200">
      <%= link_to dashboard_path, class: "flex items-center space-x-3 group" do %>
        <div class="w-10 h-10 bg-gradient-to-br from-slate-900 to-slate-700 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-105 transition-all duration-300">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <span class="text-xl font-bold text-slate-900"><%= ActsAsTenant.current_tenant.name.split.first %></span>
      <% end %>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-4 py-6 space-y-2">
      <!-- Dashboard -->
      <%= link_to dashboard_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group #{'bg-slate-100 text-slate-900' if current_page?(root_path)}" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
        </svg>
        <span class="font-semibold">Dashboard</span>
      <% end %>

      <!-- Analytics -->
      <%= link_to "#", class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="font-semibold">Analytics</span>
      <% end %>

      <!-- Users -->
      <%= link_to "#", class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <span class="font-semibold">Users</span>
      <% end %>

      <!-- Events -->
      <%= link_to "#", class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="font-semibold">Events</span>
      <% end %>

      <!-- Reports -->
      <%= link_to "#", class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="font-semibold">Reports</span>
      <% end %>

      <!-- Divider -->
      <div class="border-t border-slate-200 my-4"></div>

      <!-- Settings -->
      <%= link_to "#", class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="font-semibold">Settings</span>
      <% end %>

      <!-- Help -->
      <%= link_to "#", class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-semibold">Help</span>
      <% end %>
    </nav>

    <!-- Footer -->
    <div class="px-4 py-4 border-t border-slate-200">
      <div class="flex items-center space-x-3 px-4 py-3 bg-slate-50 rounded-2xl">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <div class="flex-1">
          <div class="text-xs font-semibold text-slate-900">System Status</div>
          <div class="text-xs text-slate-600">All systems operational</div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Mobile sidebar overlay -->
<div class="fixed inset-0 z-30 bg-slate-900/50 backdrop-blur-sm lg:hidden hidden" id="sidebar-overlay"></div>
