<div class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out" 
     data-mobile-menu-target="sidebar">
  <div class="flex flex-col h-full">
    <div class="flex items-center px-6 py-6 border-b border-slate-200">
      <%= link_to dashboard_path, class: "flex items-center space-x-3 group" do %>
        <div class="w-10 h-10 bg-gradient-to-br from-slate-900 to-slate-700 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-105 transition-all duration-300">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <span class="text-xl font-bold text-slate-900"><%= ActsAsTenant.current_tenant.name.split.first %></span>
      <% end %>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-4 py-6 space-y-2">
      <!-- Dashboard -->
      <%= link_to dashboard_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group #{'bg-slate-100 text-slate-900' if current_page?(dashboard_path)}" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
        </svg>
        <span class="font-semibold">Dashboard</span>
      <% end %>

      <%= link_to analytics_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="font-semibold">Analytics</span>
      <% end %>

      <%= link_to users_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <span class="font-semibold">Users</span>
      <% end %>

      <%= link_to activities_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="font-semibold">Activities</span>
      <% end %>

      <%= link_to recognitions_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group #{'bg-slate-100 text-slate-900' if current_page?(recognitions_path) || current_page?(new_recognition_path)}" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
        </svg>
        <span class="font-semibold">Recognitions</span>
      <% end %>

      <div class="border-t border-slate-200 my-4"></div>

      <%= link_to company_settings_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="font-semibold">Settings</span>
      <% end %>

      <%= link_to edit_user_registration_path, class: "flex items-center px-4 py-3 text-slate-700 rounded-2xl hover:bg-slate-50 hover:text-slate-900 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-semibold">My Profile</span>
      <% end %>
    </nav>

    <div class="px-4 py-4 border-t border-slate-200">
      <div class="relative" data-controller="company-switcher">
        <button type="button" 
                class="w-full flex items-center justify-between px-4 py-3 bg-slate-50 rounded-2xl hover:bg-slate-100 transition-colors group" 
                data-action="click->company-switcher#toggle">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-slate-900 to-slate-700 rounded-xl flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <div class="flex-1 text-left">
              <div class="text-sm font-semibold text-slate-900"><%= ActsAsTenant.current_tenant.name %></div>
              <div class="text-xs text-slate-600">Switch Company</div>
            </div>
          </div>
          <svg class="w-4 h-4 text-slate-400 group-hover:text-slate-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"></path>
          </svg>
        </button>

        <div class="absolute bottom-full left-0 right-0 mb-2 bg-white rounded-2xl shadow-xl border border-slate-200 py-2 hidden" 
             data-company-switcher-target="dropdown">
          <div class="px-4 py-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">Available Companies</div>
          <% if user_signed_in? && current_user.companies.any? %>
            <% current_user.companies.each do |company| %>
              <%= link_to switch_company_dashboard_index_path(company_id: company.id), 
                  method: :get,
                  data: { action: "click->company-switcher#close" },
                  class: "flex items-center px-4 py-3 hover:bg-slate-50 transition-colors group #{'bg-slate-100' if company.id == ActsAsTenant.current_tenant&.id}" do %>
                <div class="w-6 h-6 bg-gradient-to-br from-slate-900 to-slate-700 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="text-sm font-medium text-slate-900"><%= company.name %></div>
                  <div class="text-xs text-slate-500">
                    <%= current_user.role_in_company(company)&.name&.capitalize || 'Member' %>
                  </div>
                </div>
                <% if company.id == ActsAsTenant.current_tenant&.id %>
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                <% end %>
              <% end %>
            <% end %>
          <% else %>
            <div class="px-4 py-3 text-sm text-slate-500">No companies available</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="fixed inset-0 z-40 bg-slate-900/50 backdrop-blur-sm lg:hidden hidden" 
     data-mobile-menu-target="overlay"
     data-action="click->mobile-menu#close"></div>
