<% content_for :title, "User Activity Tracking - Monitor & Analyze User Behavior" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-slate-50">
  <!-- Navigation Header -->
  <nav class="bg-white/80 backdrop-blur-2xl border-b border-slate-200/30 sticky top-0 z-50 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-20">
        <div class="flex items-center">
          <div class="flex-shrink-0 flex items-center space-x-3">
            <div class="w-12 h-12 bg-gradient-to-br from-slate-900 to-slate-700 rounded-2xl flex items-center justify-center shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold text-slate-900">ActivityTracker</h1>
          </div>
        </div>
        <div class="flex items-center space-x-6">
          <% if user_signed_in? %>
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-3 bg-slate-50/80 backdrop-blur-sm px-4 py-2 rounded-full border border-slate-200/50">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium text-slate-700">Signed in as <%= current_user.email %></span>
              </div>
              <%= button_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?" }, class: "text-slate-600 hover:text-slate-900 font-medium transition-colors duration-200" do %>
                Sign Out
              <% end %>
            </div>
          <% else %>
            <div class="flex items-center space-x-4">
              <%= link_to new_user_session_path, class: "text-slate-600 hover:text-slate-900 font-semibold transition-colors duration-200" do %>
                Sign In
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-24">
      <div class="text-center">
        <!-- Status Badge -->
        <div class="inline-flex items-center px-6 py-3 rounded-full bg-slate-50 border border-slate-200 mb-12 shadow-sm">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse shadow-lg shadow-green-500/50"></div>
            <span class="text-sm font-bold text-slate-700">✨ Real-time Magic Happening</span>
            <div class="w-1 h-1 bg-slate-400 rounded-full"></div>
            <span class="text-xs font-medium text-slate-600">99.9% Always On</span>
          </div>
        </div>
        
        <!-- Main Heading -->
        <h1 class="text-6xl sm:text-7xl lg:text-8xl font-black mb-12 leading-tight">
          <span class="text-slate-900 block">Turn User Chaos</span>
          <span class="text-slate-700 block">Into Crystal Clarity</span>
        </h1>
        
        <!-- Subtitle -->
        <p class="text-2xl text-slate-600 max-w-4xl mx-auto mb-16 leading-relaxed font-medium">
          Stop guessing what your users are doing. Start <em class="font-bold text-slate-800">knowing</em>. 
          Our intelligent tracking reveals the hidden patterns that transform confusion into confidence.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-8 justify-center items-center mb-20">
          <% unless user_signed_in? %>
            <%= link_to new_user_session_path, class: "group relative overflow-hidden bg-slate-900 hover:bg-slate-800 text-white px-12 py-5 rounded-2xl text-xl font-bold transition-all duration-300 shadow-xl transform hover:-translate-y-2 hover:scale-105" do %>
              <span class="relative z-10 flex items-center space-x-3">
                <span>Start Your Journey</span>
                <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </span>
            <% end %>
            <%= link_to "#features", class: "border-2 border-slate-300 hover:border-slate-400 text-slate-700 hover:text-slate-900 px-12 py-5 rounded-2xl text-xl font-bold transition-all duration-300 hover:bg-slate-50 hover:shadow-lg transform hover:-translate-y-1" do %>
              See the Magic
            <% end %>
          <% else %>
            <%= link_to root_path, class: "group bg-slate-900 hover:bg-slate-800 text-white px-12 py-5 rounded-2xl text-xl font-bold transition-all duration-300 shadow-xl transform hover:-translate-y-2 hover:scale-105 flex items-center space-x-3" do %>
              <span>Enter Your Command Center</span>
              <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Subtle Decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-slate-100/30 to-gray-100/30 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-br from-slate-100/20 to-gray-100/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-slate-50/40 to-gray-50/40 rounded-full blur-2xl"></div>
    </div>
  </div>

  <!-- Features Section -->
  <div id="features" class="py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-5xl font-black text-slate-900 mb-8">Why Teams Choose Us</h2>
        <p class="text-2xl text-slate-600 font-medium max-w-3xl mx-auto">
          Because ordinary analytics tell you <em>what</em> happened. We reveal <strong>why</strong> it matters.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
        <!-- Feature 1 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl border border-slate-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Lightning-Fast Insights</h3>
          <p class="text-slate-600 text-lg leading-relaxed">Watch user behavior unfold in real-time. No waiting, no delays—just instant understanding of what's happening right now.</p>
        </div>

        <!-- Feature 2 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl border border-slate-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Smart Pattern Recognition</h3>
          <p class="text-slate-600 text-lg leading-relaxed">Our AI doesn't just collect data—it connects the dots. Discover hidden user journeys and breakthrough moments you never knew existed.</p>
        </div>

        <!-- Feature 3 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl border border-slate-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Fort Knox Security</h3>
          <p class="text-slate-600 text-lg leading-relaxed">Your data is locked down tighter than a secret recipe. Enterprise-grade encryption meets privacy-first design.</p>
        </div>

        <!-- Feature 4 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl border border-slate-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Plug & Play Simplicity</h3>
          <p class="text-slate-600 text-lg leading-relaxed">No PhD in data science required. Copy, paste, and you're tracking. It's so simple, your intern could set it up during lunch.</p>
        </div>

        <!-- Feature 5 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl border border-slate-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4 19h5v-5H4v5zM9 3h11v11H9V3z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Psychic-Level Alerts</h3>
          <p class="text-slate-600 text-lg leading-relaxed">Get notified before problems become disasters. Our smart alerts are like having a crystal ball for user behavior.</p>
        </div>

        <!-- Feature 6 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl border border-slate-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-slate-900 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Teamwork Makes Dreams Work</h3>
          <p class="text-slate-600 text-lg leading-relaxed">Share insights that actually matter. Turn data into stories your whole team can understand and act on.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Section -->
  <div class="py-32 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-5xl font-black text-slate-900 mb-8">The Numbers Don't Lie</h2>
        <p class="text-2xl text-slate-600 font-medium">Join the revolution of teams who've cracked the code on user behavior</p>
      </div>
      
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-12">
        <div class="text-center group cursor-pointer">
          <div class="text-6xl font-black text-slate-900 mb-4 group-hover:scale-110 transition-transform duration-300">10K+</div>
          <div class="text-slate-600 font-bold text-lg">Happy Users</div>
        </div>
        <div class="text-center group cursor-pointer">
          <div class="text-6xl font-black text-slate-900 mb-4 group-hover:scale-110 transition-transform duration-300">500+</div>
          <div class="text-slate-600 font-bold text-lg">Smart Companies</div>
        </div>
        <div class="text-center group cursor-pointer">
          <div class="text-6xl font-black text-slate-900 mb-4 group-hover:scale-110 transition-transform duration-300">1M+</div>
          <div class="text-slate-600 font-bold text-lg">Moments Captured</div>
        </div>
        <div class="text-center group cursor-pointer">
          <div class="text-6xl font-black text-slate-900 mb-4 group-hover:scale-110 transition-transform duration-300">99.9%</div>
          <div class="text-slate-600 font-bold text-lg">Always There</div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="py-32 bg-slate-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-transparent via-slate-800/10 to-transparent"></div>
    <div class="relative max-w-5xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-5xl font-black text-white mb-8">Ready to Decode Your Users?</h2>
      <p class="text-2xl text-slate-300 mb-12 leading-relaxed font-medium">Stop playing guessing games. Start making decisions based on what your users actually do, not what you think they do.</p>
      <%= link_to root_path, class: "group relative overflow-hidden inline-flex items-center space-x-4 bg-white hover:bg-gray-50 text-slate-900 px-12 py-5 rounded-2xl text-xl font-bold transition-all duration-300 shadow-2xl transform hover:-translate-y-2 hover:scale-105" do %>
        <span class="relative z-10">Unlock the Secrets</span>
        <svg class="relative z-10 w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      <% end %>
    </div>
    
    <!-- Subtle Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
      <div class="absolute -top-20 -right-20 w-60 h-60 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-20 -left-20 w-60 h-60 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 right-1/4 w-40 h-40 bg-white/3 rounded-full blur-2xl"></div>
    </div>
  </div>
</div>